<div class="page-header page-header--has-feed">
  <h1><strong class="dep-short"><%= @department.short_name %></strong>: <%= @department.subject %></h1>
  <%= link_to department_url(@department, format: :atom), class: 'feed', title: "neue Gutachten als Atom-Feed abonnieren" do %>
    <span class="sr-only">neue Gutachten als Atom-Feed abonnieren:</span><%= image_tag('feed-icon.svg', class: 'feed-icon', alt: 'Atom-Feed') %>
  <% end %>
</div>

<ol class="paper-list">
  <%= render partial: 'paper/paper', collection: @papers %>
</ol>

<div class="row">
  <div class="col-md-3 col-md-push-9">
    <p class="pagination-total"><%= number_with_delimiter @papers.total_count %> Gutachten</p>
  </div>
  <div class="col-md-9 col-md-pull-3">
    <%= paginate @papers %>
  </div>
</div>

